<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScreenshotAnnotator.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:ScreenshotAnnotator.Views"
        xmlns:local="using:ScreenshotAnnotator.Markup"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="ScreenshotAnnotator.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="{local:Localize Window_Title}"
		ExtendClientAreaToDecorationsHint="{Binding CanExtendClientAreaToDecorationsHint}"
		x:DataType="views:MainWindow"
        Width="1200" Height="800">
    <views:MainView />
</Window>
